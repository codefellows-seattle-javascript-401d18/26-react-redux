{
  "rules": {
    "react/prop-types": [0],
    "quotes": ["warn", "single", { "allowTemplateLiterals": true }],
    "comma-dangle": ["warn", "always-multiline"],
    "no-console": "off",
    "no-unused-vars": "off",
    "indent": [ "warn", 2 ],
    "semi": ["warn", "always"]
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "module": true,
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "node": true,
    "jest": true,
    "browser": true
  },
  "globals": {
    "__API_URI__": false,
    "__TITLE__": false,
    "__DEBUG__": false
  },
  "extends": [
    "eslint:recommended"
  ]
}
